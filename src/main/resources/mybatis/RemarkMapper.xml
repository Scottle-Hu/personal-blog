<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.huqj.blog.dao.RemarkDao">

    <resultMap type="Remark" id="remarkMap">
        <id property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="articleId" column="article_id"/>
        <result property="observerId" column="observer_id"/>
        <result property="publishTime" column="publish_time"/>
    </resultMap>

    <select id="findById" parameterType="java.lang.Integer" resultMap="remarkMap">
        SELECT * FROM remark WHERE id=#{id}
    </select>

    <select id="findByArticleId" parameterType="java.lang.Integer" resultMap="remarkMap">
        SELECT * FROM remark WHERE article_id=#{articleId}
    </select>

    <insert id="insertOne" parameterType="Remark">
        INSERT INTO remark VALUES (NULL,#{content},#{articleId},#{observerId},#{publishTime})
    </insert>

    <select id="countByArticleId" resultType="Integer">
        SELECT COUNT(*) FROM remark WHERE article_id=#{articleId};
    </select>

    <select id="countById" resultType="Integer" parameterType="String">
        SELECT COUNT(*) FROM userInfo WHERE id=#{_param};
    </select>

    <delete id="deleteById" parameterType="Integer">
        DELETE FROM remark WHERE id=#{id}
    </delete>

</mapper>